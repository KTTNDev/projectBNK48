            body {
                background-image: url("wq.jpg");
                background-repeat: repeat;
            }
            </style>
    </head>
    <body>
        <div class="container">
            <div class="page-header">
                <hr>
        </div>
            <div class="col">
               <form method="post" action="insert">
              
                </div>
                <div class="row">
                        <div class="form-group col-md-2">
                                <label for="PicProduct">SET</label>
                                <input type="text" class="form-control" name="PicProduct" placeholder="PRODUCT SET">
                            </div>
                <div class="form-group col-md-2">
                        <%
                        province = ["PHOTOSET","PHOTOBOOK","CD"];
                        %>
                        <label for="province">PRODUCT TYPE</label>
                        <select class="form-control" name="province" id="province" required>
                            <%
                                for(i=0;i<province.length;i++){
                            %>
                            <option value=<%=i%>><%=province[i]%></option>
                            <% } %>
                        </select>               
                </div>
                <div class="form-group col-md-8">
                        <label for="PDDescription">PDDescription</label>
                        <input type ="text" class="form-control" name="PDDescription" placeholder="Product Description">
                    </div>

            </div>
            <div class="row">
                         
                       
                                  <div class="form-group col-md-2">
                                    <label for="Price">Price</label>
                                    <input type ="text" class="form-control" name="Price" placeholder="Price">
                                </div>
                                <div class="form-group col-md-2">
                                        <label for="PRODUCT">Amount</label>
                                        <input type="text" class="form-control" name="PRODUCT" placeholder="Amount">
                                    </div>
                            </div>
                          
                                 <div class="form-group">
                                     <label for = "sex">PRODUCT STATUS</label>
                                     <div class="custom-control custom-radio">
                                         <input class="custom-control-input" type="radio" name="sex" id="sex1" value="In stock" checked>
                                         <label class="custom-control-label" for="sex1">In stock</label>
                                     </div>
                                     <div class="custom-control custom-radio custom-control-inline">
                                         <input class="custom-control-input" type="radio" name="sex" id="sex2" value="Out stock">
                                         <label class="custom-control-label" for="sex2">Out stock</label>
                                     </div>
                                 </div>
                          
                  
             
                 
                
                   <button type ="submit" class="btn btn-primary">Submit</button>
                   <button type ="reset" class="btn btn-primary">Reset</button>
               </form>
            </div>
        </div>
    </div>

            <script src="jquery-3.2.1.min.js"></script>
            <script src="popper.min.js"></script> 
            <script src="bootstrap/dist/js/bootstap.min.js"></script>
            </body>
