<html>
    <head>
        <title> ทะเบียนราษฏร์ภาคใต้ </title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, intial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
    </head>
    <body>
        <div class="container">
            <div class="page-header">
                <h1> บันทึกข้อมูลส่วนตัว </h1>
                <hr>
            </div>
            <div class="row">
                <div class="col">
                    <form method="post" action="insert">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="Idcard">บัตรประชาชน</label>
                                <input type="text" class="form-control" name="card" placeholder="กรอกบัตรประชาชน" maxlength = "13" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="Dateofbirth">วันเดือนปีเกิด</label>
                                <input type="text" class="form-control" name="dateofbirth" placeholder="วว/ดด/ปปปป" required>
                            </div>
                        </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label for = "sex">คำนำหน้า</label>
                            <div class="custom-control custom-radio">
                                <input class="custom-control-input" type="radio" name="sex" id="sex1" value="M" checked>
                                <label class="custom-control-label" for="sex1">นาย</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input class="custom-control-input" type="radio" name="sex" id="sex2" value="F">
                                <label class="custom-control-label" for="sex2">นางสาว</label>
                            </div>
                        </div>
                            <div class="form-group  col-md-5">
                                <label for="Fname"> ชื่อ </label>
                                <input type="text" class="form-control" name="fname" placeholder="กรอกชื่อ" required>
                            </div>
                            <div class="form-group  col-md-6">
                                <label for="Lname">นามสกุล</label>
                                <input type="text" class="form-control" name="lname" placeholder="กรอกนามสกุล" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label for="Address">ที่อยู่</label>
                                <input type="text" class="form-control" name="address" placeholder="กรอกที่อยู่" required>
                            </div>
                        </div>
                     <div class="form-row">
                            <div class="form-group col-md-4">
                                <%
                                province = ["ภูเก็ต","พังงา","กระบี่","ชุมพร","ระนอง","สุราษฎร์ธานี","นครศรีธรรมราช","ตรัง","พัทลุง","สตูล","สงขลา","ปัตตานี","นราธิวาส","ยะลา"];
                                %>
                                <label for="province">จังหวัด</label>
                                <select class="form-control" name="province" id="province" required>
                                    <%
                                        for(i=0;i<province.length;i++){
                                    %>
                                    <option value=<%=i%>><%=province[i]%></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="zipcode">รหัสไปรษณีย์</label >
                                <input type="intl" class="form-control" name="zipcode" placeholder="กรอกรหัสไปรษณีย์" maxlength = "5" required > 
                            </div>
                        </div>
                    </div>
            </div>
                        <button type="submit" class="btn btn-primary">ยืนยัน</button>
                        <button type="reset" class="btn btn-primary">ล้างข้อมูล</button>
                        <button class="btn btn-primary" a href="index" onclick="history.go(-1);return false;">ย้อนกลับ</a></button>
                    </form>
                </div>
            </div>
        <script src="jquery-3.2.1.min.js"></script>
        <script src="popper.min.js"></script> 
        <script src="bootstrap/dist/js/bootstap.min.js"></script>
    </body>
</html>