<body>
       
                            <div class="container">
                                <div class="page-header">
                                <hr>    <h1> |PRODUCT UPDATE|  </h1>
                                    <hr>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <form method="post" action="/update">
                                            
                                            <div class="form-row">
                                                
                                                <div class="form-group col-md-1">
                                                    <label for="PicProduct">SET</label>
                                                    <input type="text" class="form-control" name="PicProduct" value="<%=PicProduct%>"  required>
                                                </div>
                                                <div class="form-group col-md-2">
                                                        <%
                                                        province = ["PHOTOSET","PHOTOBOOK","CD"];
                                                        %>
                                                        <label for="province">PRODUCT TYPE</label>
                                                        <select class="form-control" name="province" id="province" required>
                                                        <%
                                                                for(i=0;i<province.length;i++){
                                                                    if(i==province) {
                                                                        select_p="selected";
                                                                    } else {
                                                                        select_p="";
                                                                    }
                                                            %>
                                                        <option value=<%=i%> <%=select_p%> ><%=province[i]%></option>
                                                            <% } %>
                                                        </select>
                                                        
                                                    </div>
                                                    <div class="form-group col-md-7">
                                                            <label for="PDDescription">PDDescription</label>
                                                            <input type="text" class="form-control" name="PDDescription" value="<%=PDDescription%>" required>
                                                        </div>
                                            </div>

                                                    <div class="form-group  col-md-5">
                                                            <label for="Price"> Price </label>
                                                            <input type="text" class="form-control" name="Price" value="<%=Price%>" required>
                                                        </div>
                                                        <div class="form-group  col-md-5">
                                                                <label for="PRODUCT">Amount</label>
                                                                <input type="text" class="form-control" name="PRODUCT" value="<%=PRODUCT%>" required>
                                                            </div>
                                        <%
                                        check_m="In stock";
                                        check_f="Out stock";
                            
                                        if(sex=="In stock") {
                                            check_m="checked";
                                        } else {
                                            check_f="checked";
                                        }
                                        %>
                                        <div class="form-row">
                                            <div class="form-group">
                                                <label for = "sex">PRODUCT STATUS</label>
                                                <div class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" name="sex" id="sex1" value="In stock" <%=check_m%>>
                                                    <label class="custom-control-label" for="sex1">In stock</label>
                                                </div>
                                                <div class="custom-control custom-radio custom-control-inline">
                                                    <input class="custom-control-input" type="radio" name="sex" id="sex2" value="Out stock" <%=check_f%>>
                                                    <label class="custom-control-label" for="sex2">Out stock</label>
                                                </div>
                                            </div>
                                            </div>
                                           
                                        </div>

                                    </div>  


<center>

<button type="submit" class="btn btn-success  btn-lg">SUBMIT</button>
<button type="reset" class="btn btn-danger btn-lg">RESET</button>
<button class="btn btn-warning btn-lg" a href="/list" onclick="history.go(-1);return false;">BACK</a></button>
</center>
</form>
